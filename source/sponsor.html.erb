---
title: "sponsor | unasuke.com"
---

<% sponsors = YAML.load(File.read(File.join("source", "data", "sponsors.yml"))) %>

<section class="max-w-7xl mx-auto mb-12">
  <div class="max-w-2xl mx-auto text-center">
    <h1 class="text-3xl max-[426px]:text-xl font-bold pt-5 mb-5">They are sponsors of the "unasuke.com".</h1>
    <p>Many thanks!</p>
  </div>
</section>
<section class="max-w-[70%] mx-auto mb-12">
  <% sponsors.each_slice(3) do |_sponsors| %>
    <div class="grid grid-cols-3 max-[426px]:grid-cols-1 gap-5 mb-6">
      <% _sponsors.each do |person, data| %>
        <div class="px-5 max-[426px]:mb-6 max-[426px]:px-0">
          <div class="box-border border border-[#838383] rounded bg-[#f9f9f9] shadow-[5px_5px_5px_#f0f0f0] text-center">
            <%= image_tag "sponsors/#{data['image']}", class: "w-full mb-2.5 rounded-t" %>
            <div class="text-xl leading-tight mb-2.5">
              <%= data["name"] %>
            </div>
            <div class="mb-2.5">
              <span><i class="fab fa-twitter mr-1"></i></span>
              <span>
                <a class="text-(--font-color)" href="https://twitter.com/<%= data["twitter"] %>">
                  <%= data["twitter"] %>
                </a>
              </span>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</section>
<section class="max-w-7xl mx-auto text-center text-2xl mb-12">
  <del>
    <a class="text-(--font-color)" href="https://steers.jp/c/6b819cbcc96b6727">I want to be a sponsor of the unasuke!</a>
  </del>
</section>
<section class="max-w-7xl mx-auto text-center text-base mb-8">
  <a class="text-(--font-color) underline" href="/">back to the index page.</a>
</section>
